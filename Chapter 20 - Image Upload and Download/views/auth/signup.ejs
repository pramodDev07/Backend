<%- include('../partials/head') %>
    <!-- Add Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  </head>

  <body class="bg-gradient-to-br from-red-50 to-orange-50 min-h-screen">
    <%- include('../partials/nav') %>
    <main class="container mx-auto mt-2 px-4 py-8">
      <div class="max-w-2xl mx-auto bg-white rounded-2xl shadow-2xl overflow-hidden backdrop-blur-lg">
        <!-- Header Section -->
        <div class="bg-gradient-to-r from-red-500 to-orange-500 px-8 py-6 text-center relative overflow-hidden">
          <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg width=\"30\" height=\"30\" viewBox=\"0 0 60 60\" xmlns=\"http://www.w3.org/2000/svg\"%3E%3Cg fill=\"none\" fill-rule=\"evenodd\"%3E%3Cg fill=\"%23ffffff\" fill-opacity=\"0.1\"%3E%3Cpath d=\"M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')] opacity-30"></div>
          <h1 class="text-4xl font-bold text-white mb-2">
            Create Account
          </h1>
          <p class="text-red-50 text-sm">Join us and start your journey today</p>
        </div>

        <!-- Form Section -->
        <form action="/signup" method="POST" class="px-8 py-8 space-y-6">
          <!-- Display Validation Errors -->
          <%- include('../partials/errors') %>

          <!-- Name Fields -->
          <div class="flex justify-between gap-4">
            <div class="w-full space-y-2">
              <label class="block text-gray-700 text-sm font-semibold">First Name</label>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <i class="fas fa-user text-gray-400"></i>
                </div>
                <input type="text" name="firstName" value="<%= oldInput.firstName ? oldInput.firstName : '' %>"
                  placeholder="John"
                  class="w-full pl-10 pr-4 py-3 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition duration-200 bg-gray-50/50"
                  required />
              </div>
            </div>

            <div class="w-full space-y-2">
              <label class="block text-gray-700 text-sm font-semibold">Last Name</label>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <i class="fas fa-user text-gray-400"></i>
                </div>
                <input type="text" name="lastName" value="<%= oldInput.lastName ? oldInput.lastName : '' %>"
                  placeholder="Doe"
                  class="w-full pl-10 pr-4 py-3 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition duration-200 bg-gray-50/50" />
              </div>
            </div>
          </div>

          <!-- Email Field -->
          <div class="space-y-2">
            <label class="block text-gray-700 text-sm font-semibold">Email Address</label>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <i class="fas fa-envelope text-gray-400"></i>
              </div>
              <input type="email" name="email" value="<%= oldInput.email ? oldInput.email : '' %>"
                placeholder="john.doe@example.com"
                class="w-full pl-10 pr-4 py-3 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition duration-200 bg-gray-50/50"
                required />
            </div>
          </div>

          <!-- Password Fields -->
          <div class="space-y-2">
            <label class="block text-gray-700 text-sm font-semibold">Password</label>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <i class="fas fa-lock text-gray-400"></i>
              </div>
              <input type="password" name="password" placeholder="••••••••"
                class="w-full pl-10 pr-4 py-3 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition duration-200 bg-gray-50/50"
                required />
            </div>
          </div>

          <div class="space-y-2">
            <label class="block text-gray-700 text-sm font-semibold">Confirm Password</label>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <i class="fas fa-lock text-gray-400"></i>
              </div>
              <input type="password" name="confirmPassword" placeholder="••••••••"
                class="w-full pl-10 pr-4 py-3 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition duration-200 bg-gray-50/50"
                required />
            </div>
          </div>

          <!-- User Type Selection -->
          <div class="p-5 bg-gradient-to-br from-gray-50 to-white rounded-xl border border-gray-100 shadow-sm">
            <span class="block text-gray-700 font-semibold mb-4 text-sm">Select Account Type</span>
            <div class="flex gap-4">
              <label class="flex-1 relative overflow-hidden group">
                <input type="radio" name="userType" value="guest" id="guest"
                  class="absolute opacity-0 w-full h-full cursor-pointer peer"
                  checked="<% oldInput.userType === 'guest' %>" />
                <div class="flex items-center justify-center gap-2 p-4 border-2 border-gray-200 rounded-xl bg-white transition-all duration-300
                    peer-checked:border-red-500 peer-checked:bg-red-50 group-hover:border-red-300">
                  <i class="fas fa-user text-gray-400 peer-checked:text-red-500"></i>
                  <span class="font-medium text-gray-700 peer-checked:text-red-500">Guest</span>
                </div>
              </label>
              <label class="flex-1 relative overflow-hidden group">
                <input type="radio" name="userType" value="host" id="host"
                  class="absolute opacity-0 w-full h-full cursor-pointer peer"
                  checked="<% oldInput.userType === 'host' %>" />
                <div class="flex items-center justify-center gap-2 p-4 border-2 border-gray-200 rounded-xl bg-white transition-all duration-300
                    peer-checked:border-red-500 peer-checked:bg-red-50 group-hover:border-red-300">
                  <i class="fas fa-home text-gray-400 peer-checked:text-red-500"></i>
                  <span class="font-medium text-gray-700 peer-checked:text-red-500">Host</span>
                </div>
              </label>
            </div>
          </div>

          <!-- Terms and Conditions -->
          <div class="relative">
            <label class="flex items-start cursor-pointer group gap-3">
              <input type="checkbox" name="terms" id="terms" 
                class="w-5 h-5 border-2 border-gray-300 rounded checked:bg-red-500 checked:border-red-500 focus:ring-red-500 focus:ring-2"
                required />
              <span class="text-sm text-gray-600 leading-tight">
                I agree to the <a href="#" class="text-red-500 hover:text-red-600 font-medium">Terms and
                  Conditions</a> and <a href="#" class="text-red-500 hover:text-red-600 font-medium">Privacy Policy</a>
              </span>
            </label>
          </div>

          <!-- Submit Button -->
          <button type="submit"
            class="w-full bg-gradient-to-r from-red-500 to-orange-500 text-white py-4 rounded-xl hover:from-red-600 hover:to-orange-600 
            transition-all duration-300 font-semibold text-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 
            flex items-center justify-center gap-2">
            <span>Create Account</span>
            <i class="fas fa-arrow-right"></i>
          </button>

          <!-- Login Link -->
          <div class="text-center text-gray-600 text-sm">
            Already have an account?
            <a href="/login" class="text-red-500 hover:text-red-600 font-semibold ml-1 hover:underline">
              Sign In
            </a>
          </div>
        </form>
      </div>
    </main>
  </body>
</html>