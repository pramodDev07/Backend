<%- include('../partials/head') %>
</head>
<body class="bg-gray-50">
  
  <!-- Header -->
 <%- include('../partials/nav') %>

  <!-- Progress Steps -->
  <div class="bg-white border-b border-gray-200">
    <div class="container mx-auto px-4 py-4">
      <div class="flex items-center justify-center space-x-4">
        <div class="flex items-center">
          <div class="w-10 h-10 bg-red-600 text-white rounded-full flex items-center justify-center font-bold">
            1
          </div>
          <span class="ml-2 font-semibold text-gray-900">Your Details</span>
        </div>
        <div class="w-16 h-1 bg-gray-300"></div>
        <div class="flex items-center">
          <div class="w-10 h-10 bg-gray-300 text-gray-600 rounded-full flex items-center justify-center font-bold">
            2
          </div>
          <span class="ml-2 text-gray-500">Payment</span>
        </div>
        <div class="w-16 h-1 bg-gray-300"></div>
        <div class="flex items-center">
          <div class="w-10 h-10 bg-gray-300 text-gray-600 rounded-full flex items-center justify-center font-bold">
            3
          </div>
          <span class="ml-2 text-gray-500">Confirmation</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <main class="container mx-auto px-4 py-8">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      
      <!-- Left Column - Form -->
      <div class="lg:col-span-2 space-y-6">
        
        <!-- Property Info Card -->
        <div class="bg-white rounded-xl shadow-md p-6">
          <h2 class="text-2xl font-bold text-gray-900 mb-4">Reservation Details</h2>
          <div class="flex space-x-4">
            <img src="https://images.unsplash.com/photo-1568605114967-8130f3a36994" alt="Property" class="w-24 h-24 rounded-lg object-cover">
            <div class="flex-1">
              <h3 class="text-lg font-bold text-gray-900"><%= registeredHomes.houseName %></h3>
              <p class="text-gray-600"><%= registeredHomes.location %></p>
              <div class="flex items-center mt-2">
                <svg class="w-4 h-4 text-yellow-400 fill-current" viewBox="0 0 20 20">
                  <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
                </svg>
                <span class="ml-1 text-sm font-semibold"><%= registeredHomes.rating %></span>
                <span class="ml-1 text-sm text-gray-500">(124 reviews)</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Guest Information -->
        <div class="bg-white rounded-xl shadow-md p-6">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Guest Information</h2>
          <form class="space-y-4">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">First Name *</label>
                <input type="text" value="Rajesh" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent outline-none transition">
              </div>
              <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">Last Name *</label>
                <input type="text" value="Kumar" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent outline-none transition">
              </div>
            </div>

            <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2">Email Address *</label>
              <input type="email" value="rajesh.kumar@email.com" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent outline-none transition">
            </div>

            <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2">Phone Number *</label>
              <div class="flex space-x-2">
                <select class="px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent outline-none transition">
                  <option>+91</option>
                  <option>+1</option>
                  <option>+44</option>
                </select>
                <input type="tel" value="9876543210" class="flex-1 px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent outline-none transition">
              </div>
            </div>

            <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2">Number of Guests *</label>
              <select class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent outline-none transition">
                <option>1 guest</option>
                <option>2 guests</option>
                <option>3 guests</option>
                <option selected>4 guests</option>
                <option>5 guests</option>
                <option>6 guests</option>
                <option>7 guests</option>
                <option>8 guests</option>
              </select>
            </div>
          </form>
        </div>

        <!-- Special Requests -->
        <div class="bg-white rounded-xl shadow-md p-6">
          <h2 class="text-2xl font-bold text-gray-900 mb-4">Special Requests</h2>
          <p class="text-sm text-gray-600 mb-4">Let the host know if you have any special requirements</p>
          <textarea rows="4" placeholder="Early check-in, airport pickup, dietary requirements, etc." class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent outline-none transition resize-none"></textarea>
        </div>

        <!-- Cancellation Policy -->
        <div class="bg-blue-50 rounded-xl p-6 border border-blue-200">
          <div class="flex items-start space-x-3">
            <svg class="w-6 h-6 text-blue-600 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <div>
              <h3 class="font-bold text-gray-900 mb-2">Cancellation Policy</h3>
              <p class="text-sm text-gray-700">Free cancellation before 48 hours of check-in. After that, 50% refund will be provided if cancelled before 24 hours. No refund for cancellations within 24 hours of check-in.</p>
            </div>
          </div>
        </div>

        <!-- House Rules -->
        <div class="bg-white rounded-xl shadow-md p-6">
          <h2 class="text-2xl font-bold text-gray-900 mb-4">House Rules</h2>
          <div class="space-y-3">
            <div class="flex items-start space-x-3">
              <svg class="w-5 h-5 text-green-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              <p class="text-gray-700">Check-in: 2:00 PM - 11:00 PM</p>
            </div>
            <div class="flex items-start space-x-3">
              <svg class="w-5 h-5 text-green-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              <p class="text-gray-700">Check-out: Before 11:00 AM</p>
            </div>
            <div class="flex items-start space-x-3">
              <svg class="w-5 h-5 text-green-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              <p class="text-gray-700">Self check-in with lockbox</p>
            </div>
            <div class="flex items-start space-x-3">
              <svg class="w-5 h-5 text-red-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
              <p class="text-gray-700">No smoking</p>
            </div>
            <div class="flex items-start space-x-3">
              <svg class="w-5 h-5 text-red-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
              <p class="text-gray-700">No parties or events</p>
            </div>
          </div>
          
          <div class="mt-4 pt-4 border-t border-gray-200">
            <label class="flex items-start space-x-3 cursor-pointer">
              <input type="checkbox" class="mt-1 w-5 h-5 text-red-600 border-gray-300 rounded focus:ring-red-500">
              <span class="text-sm text-gray-700">I agree to the house rules and cancellation policy</span>
            </label>
          </div>
        </div>
      </div>

      <!-- Right Column - Booking Summary -->
      <div class="lg:col-span-1">
        <div class="bg-white rounded-xl shadow-xl p-6 sticky top-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Booking Summary</h2>
          
          <!-- Dates -->
          <div class="space-y-3 mb-6">
            <div class="flex justify-between text-gray-700">
              <div>
                <p class="text-sm text-gray-500">Check-in</p>
                <p class="font-semibold">Oct 10, 2025</p>
                <p class="text-sm text-gray-500">2:00 PM</p>
              </div>
              <div class="text-right">
                <p class="text-sm text-gray-500">Check-out</p>
                <p class="font-semibold">Oct 15, 2025</p>
                <p class="text-sm text-gray-500">11:00 AM</p>
              </div>
            </div>
            <div class="border-t border-gray-200 pt-3">
              <p class="text-sm text-gray-500">Duration</p>
              <p class="font-semibold text-gray-900">5 nights</p>
            </div>
            <div class="border-t border-gray-200 pt-3">
              <p class="text-sm text-gray-500">Guests</p>
              <p class="font-semibold text-gray-900">4 guests</p>
            </div>
          </div>

          <!-- Price Breakdown -->
          <div class="border-t border-gray-200 pt-4 space-y-3 mb-6">
            <div class="flex justify-between text-gray-700">
              <span><%= registeredHomes.price %> × 5 nights</span>
              <span>₹<%= registeredHomes.price * 5 %></span>
            </div>
            <div class="flex justify-between text-gray-700">
              <span>Cleaning fee</span>
              <span>₹200</span>
            </div>
            <div class="flex justify-between text-gray-700">
              <span>Service fee</span>
              <span>₹500</span>
            </div>
            <div class="flex justify-between text-green-600">
              <span class="flex items-center">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"/>
                </svg>
                Early bird discount (10%)
              </span>
              <span>-₹250</span>
            </div>
            <div class="border-t border-gray-200 pt-3">
              <div class="flex justify-between text-lg font-bold text-gray-900">
                <span>Total (INR)</span>
                <span>₹<%= (registeredHomes.price * 5) - (200 + 500 + 250) %></span>
              </div>
              <p class="text-xs text-gray-500 mt-1">Includes all taxes and fees</p>
            </div>
          </div>

          <!-- Promo Code -->
          <div class="mb-6">
            <label class="block text-sm font-semibold text-gray-700 mb-2">Have a promo code?</label>
            <div class="flex space-x-2">
              <input type="text" placeholder="Enter code" class="flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent outline-none transition text-sm">
              <button class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg font-medium hover:bg-gray-200 transition text-sm">
                Apply
              </button>
            </div>
          </div>

          <!-- Continue Button -->
          <button class="w-full bg-gradient-to-r from-red-500 to-red-600 text-white py-4 rounded-lg font-semibold hover:from-red-600 hover:to-red-700 transition-all duration-300 shadow-md hover:shadow-lg mb-4">
            Continue to Payment
          </button>

          <p class="text-center text-xs text-gray-500">
            You won't be charged until the next step
          </p>

          <!-- Security Badge -->
          <div class="mt-6 pt-6 border-t border-gray-200">
            <div class="flex items-center justify-center space-x-2 text-gray-600">
              <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
              </svg>
              <span class="text-sm font-medium">Secure SSL Encrypted Payment</span>
            </div>
          </div>
        </div>

        <!-- Need Help Card -->
        <div class="bg-gradient-to-br from-red-50 to-orange-50 rounded-xl p-6 mt-6 border border-red-100">
          <div class="flex items-start space-x-3">
            <div class="bg-red-100 p-2 rounded-lg">
              <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"/>
              </svg>
            </div>
            <div>
              <h3 class="font-bold text-gray-900 mb-1">Need Help?</h3>
              <p class="text-sm text-gray-700 mb-3">Our support team is available 24/7</p>
              <button class="text-sm text-red-600 font-semibold hover:text-red-700 transition">
                Contact Support →
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <!-- Footer -->
  <footer class="bg-gray-800 text-white mt-16 py-8">
    <div class="container mx-auto px-4 text-center">
      <p>&copy; 2025 StayFinder. All rights reserved.</p>
    </div>
  </footer>

</body>
</html>