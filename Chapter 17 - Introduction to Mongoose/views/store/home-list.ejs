<ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% registeredHomes.forEach(home=> { %>
            <li
              class="bg-white rounded-xl shadow-sm hover:shadow-xl transition-all duration-300 overflow-hidden border border-gray-100 hover:border-gray-200">
              <!-- Image Section -->
              <div class="relative h-48 overflow-hidden bg-gray-200">
                <img src="<%= home.image %>" alt="<%= home.houseName %>"
                  class="w-full h-full object-cover transition-transform duration-300 hover:scale-110">
                  <%- include('../partials/favorite',{home: home}) %>
                <div class="absolute top-4 left-4 bg-white px-3 py-1 rounded-full shadow-md flex items-center gap-1">
                  <svg class="w-4 h-4 text-yellow-400 fill-current" viewBox="0 0 20 20">
                    <path
                      d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z" />
                  </svg>
                  <span class="text-sm font-semibold text-gray-800">
                    <%= home.rating %>
                  </span>
                </div>
              </div>

              <!-- Content Section -->
              <div class="p-5">
                <h3 class="text-xl font-bold text-gray-900 mb-2 truncate">
                  <%= home.houseName %>
                </h3>

                <div class="flex items-center text-gray-600 mb-3">
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  <span class="text-sm">
                    <%= home.location %>
                  </span>
                </div>

                <div class="flex items-baseline justify-between mt-4">
                  <div>
                    <span class="text-2xl font-bold text-gray-900">â‚¹<%= home.price %></span>
                    <span class="text-sm text-gray-500">/night</span>
                  </div>
                  <a href="/home-page/<%= home._id %>"
                    class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium transition-colors duration-200">
                    View Details
                </a>
                </div>
              </div>
            </li>
            <% }) %>
        </ul>