<!-- Display Validation Errors -->
<% if (errors.length> 0) { %>
  <div class="mb-6 p-4 bg-red-100 border border-red-400 text-red-700 rounded-lg">
    <ul class="list-disc list-inside">
      <% errors.forEach((error)=> { %>
        <li>
          <%= error %>
        </li>
        <% }); %>
    </ul>
  </div>
  <% } %>